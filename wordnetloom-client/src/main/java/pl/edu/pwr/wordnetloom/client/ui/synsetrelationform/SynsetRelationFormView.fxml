<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox prefHeight="540.0" prefWidth="600.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.edu.pwr.wordnetloom.client.ui.synsetrelationform.SynsetRelationFormView">
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="160.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label maxWidth="1.7976931348623157E308" text="Relation type:">
                    <GridPane.margin>
                        <Insets right="5.0"/>
                    </GridPane.margin>
                    <font>
                        <Font name="System Bold" size="11.0"/>
                    </font>
                </Label>
                <Label maxWidth="1.7976931348623157E308" text="Relation subtype:" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets right="5.0"/>
                    </GridPane.margin>
                    <font>
                        <Font name="System Bold" size="11.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="topRelationTypeComboBox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                          GridPane.hgrow="ALWAYS"/>
                <ComboBox fx:id="subRelationTypeComboBox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                          GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <Label text="Relation description:">
            <font>
                <Font name="System Bold" size="11.0"/>
            </font>
        </Label>
        <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
            <content>
                <TextArea fx:id="relationDescriptionAreasText" prefRowCount="5" wrapText="true"/>
            </content>
        </ScrollPane>
        <HBox spacing="5.0">
            <children>
                <GridPane HBox.hgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="154.0" minWidth="10.0" prefWidth="132.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="397.0" minWidth="10.0" prefWidth="396.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label maxWidth="1.7976931348623157E308" text="Source synset:" GridPane.hgrow="NEVER">
                            <GridPane.margin>
                                <Insets right="5.0"/>
                            </GridPane.margin>
                            <font>
                                <Font name="System Bold" size="11.0"/>
                            </font>
                        </Label>
                        <Label maxWidth="1.7976931348623157E308" text="Target synset:" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets right="5.0"/>
                            </GridPane.margin>
                            <font>
                                <Font name="System Bold" size="11.0"/>
                            </font>
                        </Label>
                        <Label fx:id="sourceSynsetLabel" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                               GridPane.hgrow="ALWAYS">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                        <Label fx:id="targetSynsetLabel" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                               GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                    </children>
                </GridPane>
                <VBox alignment="CENTER">
                    <children>
                        <Button fx:id="swapSynsetButton" alignment="CENTER" mnemonicParsing="false" onAction="#swap"/>
                    </children>
                </VBox>
            </children>
        </HBox>
        <Label text="Tests:">
            <font>
                <Font name="System Bold" size="11.0"/>
            </font>
        </Label>
        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="220.0" VBox.vgrow="ALWAYS">
            <content>
                <ListView fx:id="testsListView"/>
            </content>
        </ScrollPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
