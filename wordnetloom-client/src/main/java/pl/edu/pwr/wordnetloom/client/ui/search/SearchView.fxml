<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.textfield.CustomTextField?>
<?import pl.edu.pwr.wordnetloom.client.ui.search.LazyListView?>

<ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.pwr.wordnetloom.client.ui.search.SearchView">
   <content>
      <VBox minWidth="200.0" VBox.vgrow="ALWAYS">
          <HBox alignment="CENTER_LEFT" spacing="3.0" VBox.vgrow="NEVER">
              <CustomTextField fx:id="fieldSearch" onAction="#search" promptText="Lemma" styleClass="searchField" HBox.hgrow="ALWAYS">
                  <left>
                      <Label styleClass="searchBoxLabel" />
                  </left>
              </CustomTextField>
              <MenuButton fx:id="modeButton" mnemonicParsing="false">
                  <items>
                      <RadioMenuItem fx:id="senseMode" mnemonicParsing="false" selected="true" text="Sense Mode">
                          <toggleGroup>
                              <ToggleGroup fx:id="modeToggleGroup" />
                          </toggleGroup>
                      </RadioMenuItem>
                      <RadioMenuItem fx:id="synsetMode" mnemonicParsing="false" text="Synset Mode" toggleGroup="$modeToggleGroup" />
                  </items>
                  <font>
                      <Font size="12.0" />
                  </font>
              </MenuButton>
              <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
              </padding>
          </HBox>
          <Accordion VBox.vgrow="NEVER">
              <panes>
                  <TitledPane fx:id="generalPanel" alignment="CENTER_RIGHT" animated="false" text="General Properties" textAlignment="RIGHT">
                      <VBox spacing="2.0">
                          <ComboBox fx:id="lexiconInput" maxWidth="1.7976931348623157E308" promptText="Lexicon" />
                          <ComboBox fx:id="partOfSpeechInput" maxWidth="1.7976931348623157E308" promptText="Part Of Speech" />
                          <ComboBox fx:id="domainInput" maxWidth="1.7976931348623157E308" promptText="Domain" />
                          <ComboBox fx:id="statusInput" maxWidth="1.7976931348623157E308" promptText="Status" />
                          <TextField fx:id="definitionInput" promptText="Definition" />
                          <TextField fx:id="commentInput" promptText="Comment" />
                          <TextField fx:id="exampleInput" promptText="Example" />
                      </VBox>
                  </TitledPane>
                  <TitledPane fx:id="sensePanel" alignment="CENTER_RIGHT" animated="false" text="Sense Properties" textAlignment="RIGHT">
                      <VBox spacing="2.0">
                          <ComboBox fx:id="registerInput" maxWidth="1.7976931348623157E308" promptText="Register" />
                              <ComboBox fx:id="senseRelationTypeInput" maxWidth="1.7976931348623157E308" promptText="Relation Type" />
                          <CheckBox fx:id="onlyWithoutSynset" mnemonicParsing="false" text="%search.sense.only.without.synset" />
                      </VBox>
                  </TitledPane>
                  <TitledPane fx:id="synsetPanel" alignment="CENTER_RIGHT" animated="false" text="Synset Properties" textAlignment="RIGHT">
                      <VBox spacing="2.0">
                          <TextField fx:id="synsetIdInput" promptText="Synset ID" />
                          <ComboBox fx:id="synsetRelationTypeInput" maxWidth="1.7976931348623157E308" promptText="Relation Type" />
                          <ComboBox fx:id="synsetType" maxWidth="1.7976931348623157E308" promptText="Synset Type" />
                      </VBox>
                  </TitledPane>
                  <TitledPane fx:id="yiddishPanel" alignment="CENTER_RIGHT" animated="false" text="Yiddish Properties" textAlignment="RIGHT">
                      <VBox spacing="2.0">
                          <ComboBox fx:id="grammaticalGenderCombo" maxWidth="1.7976931348623157E308" promptText="Grammatical Gender" />
                          <ComboBox fx:id="semanticFieldCombo" maxWidth="1.7976931348623157E308" promptText="Semantic Field" />
                          <ComboBox fx:id="semanticFieldModCombo" maxWidth="1.7976931348623157E308" promptText="Semantic Filed Modifier " />
                          <ComboBox fx:id="yiddishStatusCombo" maxWidth="1.7976931348623157E308" promptText="Status" />
                          <ComboBox fx:id="styleCombo" maxWidth="1.7976931348623157E308" promptText="Style" />
                          <ComboBox fx:id="ageCombo" maxWidth="1.7976931348623157E308" promptText="Age" />
                          <ComboBox fx:id="sourceCombo" maxWidth="1.7976931348623157E308" promptText="Source" />
                          <ComboBox fx:id="lexicalCharacteristicCombo" maxWidth="1.7976931348623157E308" promptText="Lexical Characteristic" />
                          <TextField fx:id="etymologicalRootFiled" maxWidth="1.7976931348623157E308" promptText="Etymological Root" />
                          <TextField fx:id="etymologyFiled" maxWidth="1.7976931348623157E308" promptText="Etymology" />
                          <ComboBox fx:id="prefixCombo" maxWidth="1.7976931348623157E308" promptText="Particle prefix" />
                          <ComboBox fx:id="suffixCombo" maxWidth="1.7976931348623157E308" promptText="Particle suffix" />
                          <ComboBox fx:id="interfixCombo" maxWidth="1.7976931348623157E308" promptText="Particle interfix" />
                          <TextField fx:id="particleRootFiled" maxWidth="1.7976931348623157E308" promptText="Particle Root" />
                          <TextField fx:id="particleConstituentFiled" maxWidth="1.7976931348623157E308" promptText="Particle Constituent" />
                      </VBox>
                  </TitledPane>
              </panes>
          </Accordion>
          <HBox alignment="CENTER" spacing="3.0" VBox.vgrow="NEVER">
              <children>
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#search" text="Search">
            </Button>
                  <Button fx:id="resetButton" mnemonicParsing="false" onAction="#reset" text="Reset">
            </Button>
              </children>
              <VBox.margin>
                  <Insets bottom="10.0" left="8.0" right="4.0" top="6.0" />
              </VBox.margin>
          </HBox>
          <TitledPane animated="false" collapsible="false" text="Search results" VBox.vgrow="ALWAYS">
              <VBox spacing="8.0" >
                  <StackPane>
                      <children>
                          <LazyListView fx:id="searchResultList" minHeight="200.0" />
                          <StackPane fx:id="progressOverlay" StackPane.alignment="CENTER">
                                 <children>
                                  <ProgressIndicator maxHeight="40.0" maxWidth="40.0" StackPane.alignment="CENTER" />
                              </children>
                          </StackPane>
                      </children>
                  </StackPane>
                  <HBox VBox.vgrow="NEVER">
                      <children>
                          <Label text="Found:" />
                          <Label fx:id="unitsCount" text="Label" />
                      </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="2.0" VBox.vgrow="NEVER">
                      <Button fx:id="addSenseWithSynsetButton" mnemonicParsing="false" onAction="#addSenseWithSynset" />
                      <Button fx:id="addSenseButton" mnemonicParsing="false" onAction="#addSense" />
                      <Button fx:id="deleteSenseButton" mnemonicParsing="false" onAction="#deleteSense" />
                      <Button fx:id="addSenseToNewSynset" mnemonicParsing="false" onAction="#addSenseToNewSynset" />
                  </HBox>
              </VBox>
          </TitledPane>
      </VBox>
   </content>
</ScrollPane>
