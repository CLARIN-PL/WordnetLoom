<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.textfield.CustomTextField?>
<?import pl.edu.pwr.wordnetloom.client.ui.search.LazyListView?>
<VBox maxHeight="1.7976931348623157E308" minWidth="200.0" VBox.vgrow="ALWAYS"
      xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.edu.pwr.wordnetloom.client.ui.search.SearchView">

    <HBox alignment="CENTER_LEFT" spacing="3.0">
        <CustomTextField fx:id="fieldSearch" onAction="#search" promptText="Lemma" styleClass="searchField"
                         HBox.hgrow="ALWAYS">
            <left>
                <Label styleClass="searchBoxLabel">
                </Label>
            </left>
        </CustomTextField>
        <MenuButton fx:id="modeButton" mnemonicParsing="false">
            <items>
                <RadioMenuItem fx:id="senseMode" mnemonicParsing="false" selected="true" text="Sense Mode">
                    <toggleGroup>
                        <ToggleGroup fx:id="modeToggleGroup"/>
                    </toggleGroup>
                    <graphic>
                        <TitledPane animated="false" text="untitled">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                            </content>
                        </TitledPane>
                    </graphic>
                </RadioMenuItem>
                <RadioMenuItem fx:id="synsetMode" mnemonicParsing="false" text="Synset Mode"
                               toggleGroup="$modeToggleGroup"/>
            </items>
            <font>
                <Font size="12.0"/>
            </font>
        </MenuButton>
        <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
        </padding>
    </HBox>
    <Accordion maxHeight="1.7976931348623157E308">
        <panes>
            <TitledPane fx:id="generalPanel" alignment="CENTER_RIGHT" animated="false" text="General Properties"
                        textAlignment="RIGHT">
                <VBox spacing="2.0">
                    <ComboBox fx:id="lexiconInput" maxWidth="1.7976931348623157E308" promptText="Lexicon"/>
                    <ComboBox fx:id="partOfSpeechInput" maxWidth="1.7976931348623157E308" promptText="Part Of Speech"/>
                    <ComboBox fx:id="domainInput" maxWidth="1.7976931348623157E308" promptText="Domain"/>
                    <ComboBox fx:id="statusInput" maxWidth="1.7976931348623157E308" promptText="Status"/>
                    <TextField fx:id="definitionInput" promptText="Definition"/>
                    <TextField fx:id="commentInput" promptText="Comment"/>
                    <TextField fx:id="exampleInput" promptText="Example"/>
                </VBox>
            </TitledPane>
            <TitledPane fx:id="sensePanel" alignment="CENTER_RIGHT" animated="false" text="Sense Properties"
                        textAlignment="RIGHT">
                <VBox spacing="2.0">
                    <ComboBox fx:id="registerInput" maxWidth="1.7976931348623157E308" promptText="Register"/>
                    <ComboBox fx:id="senseRelationTypeInput" maxWidth="1.7976931348623157E308"
                              promptText="Relation Type"/>
                    <CheckBox fx:id="onlyWithoutSynset" mnemonicParsing="false"
                              text="%search.sense.only.without.synset"/>
                </VBox>
            </TitledPane>
            <TitledPane fx:id="synsetPanel" alignment="CENTER_RIGHT" animated="false" text="Synset Properties"
                        textAlignment="RIGHT">
                <VBox spacing="2.0">
                    <TextField fx:id="synsetIdInput" promptText="Synset ID"/>
                    <ComboBox fx:id="synsetRelationTypeInput" maxWidth="1.7976931348623157E308"
                              promptText="Relation Type"/>
                    <ComboBox fx:id="synsetType" maxWidth="1.7976931348623157E308" promptText="Synset Type"/>
                </VBox>
            </TitledPane>
            <TitledPane fx:id="yiddishPanel" alignment="CENTER_RIGHT" animated="false" text="Yiddish Properties"
                        textAlignment="RIGHT">
                <VBox spacing="2.0">
                    <ComboBox fx:id="grammaticalGenderCombo" maxWidth="1.7976931348623157E308"
                              promptText="Grammatical Gender"/>
                    <ComboBox fx:id="semanticFieldCombo" maxWidth="1.7976931348623157E308" promptText="Semantic Field"/>
                    <ComboBox fx:id="semanticFieldModCombo" maxWidth="1.7976931348623157E308"
                              promptText="S. Filed Modifier "/>
                    <ComboBox fx:id="yiddishStatusCombo" maxWidth="1.7976931348623157E308" promptText="Status"/>
                    <ComboBox fx:id="ageCombo" maxWidth="1.7976931348623157E308" promptText="Age"/>
                    <ComboBox fx:id="sourceCombo" maxWidth="1.7976931348623157E308" promptText="Source"/>
                    <ComboBox fx:id="lexicalCharacteristicCombo" maxWidth="1.7976931348623157E308"
                              promptText="Lexical Characteristic"/>
                    <TextField fx:id="etymologyFiled" maxWidth="1.7976931348623157E308" promptText="Etymology"/>
                </VBox>
            </TitledPane>
        </panes>
    </Accordion>
    <HBox alignment="CENTER" spacing="3.0">
        <children>
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#search" text="Search">
            </Button>
            <Button fx:id="resetButton" mnemonicParsing="false" onAction="#reset" text="Reset">
            </Button>
        </children>
        <VBox.margin>
            <Insets bottom="10.0" left="8.0" right="4.0" top="6.0"/>
        </VBox.margin>
    </HBox>
    <TitledPane animated="false" collapsible="false" maxHeight="1.7976931348623157E308" text="Search results"
                VBox.vgrow="ALWAYS">
        <VBox maxHeight="1.7976931348623157E308" spacing="8.0">
            <StackPane VBox.vgrow="ALWAYS">
                <children>
                    <LazyListView fx:id="searchResultList" maxHeight="1.7976931348623157E308"/>
                    <StackPane fx:id="progressOverlay" StackPane.alignment="CENTER">
                        <children>
                            <ProgressIndicator maxHeight="40.0" maxWidth="40.0" StackPane.alignment="CENTER"/>
                        </children>
                    </StackPane>

                </children>
            </StackPane>
            <HBox prefHeight="22.0" prefWidth="248.0">
                <children>
                    <Label text="Found:"/>
                    <Label fx:id="unitsCount" text="Label"/>
                </children>
            </HBox>
            <HBox alignment="CENTER" spacing="2.0">
                <Button fx:id="addSenseWithSynsetButton" mnemonicParsing="false" onAction="#addSenseWithSynset"/>
                <Button fx:id="addSenseButton" mnemonicParsing="false" onAction="#addSense"/>
                <Button fx:id="deleteSenseButton" mnemonicParsing="false" onAction="#deleteSense"/>
                <Button fx:id="addSenseToNewSynset" mnemonicParsing="false" onAction="#addSenseToNewSynset"/>
            </HBox>
        </VBox>
    </TitledPane>
</VBox>
